<launch>
  <!-- Arguments -->
  <arg name="cmd_vel_topic" default="/cmd_vel" />
  <arg name="odom_topic" default="odom" />

  <arg name="map_frame" default="map" />
  <arg name="scan_frame" default="base_link" />
  <arg name="base_frame" default="base_footprint" />
  <arg name="odom_frame" default="odom" />


  <arg name="move_forward_only" default="false"/>

  <!-- move_base -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <!-- <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" /> -->
    <!-- <param name="base_global_planner" value="global_planner/GlobalPlanner" /> -->

    <param name="base_global_planner" value="navfn/NavfnROS" />
    <param name="base_local_planner" value="teb_local_planner/TebLocalPlannerROS" />

    <rosparam file="$(find caato2_navigation)/param/costmap_common_params_caato2.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find caato2_navigation)/param/costmap_common_params_caato2.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find caato2_navigation)/param/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find caato2_navigation)/param/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find caato2_navigation)/param/base_local_planner_params.yaml" command="load" />

    <!-- <rosparam file="$(find caato2_navigation)/param/move_base_params.yaml" command="load" /> -->

    <rosparam file="$(find caato2_navigation)/param/teb_local_planner_params.yaml" command="load" />
    <!-- <rosparam file="$(find caato2_navigation)/param/dwa_local_planner_params_caato2.yaml" command="load" /> -->

    <param name="controller_frequency" value="10.0" />
    <param name="local_costmap/scan/sensor_frame" value="$(arg scan_frame)" />
    <param name="local_costmap/global_frame" value="$(arg odom_frame)" />
    <param name="local_costmap/robot_base_frame" value="$(arg base_frame)" />
    <param name="global_costmap/scan/sensor_frame" value="$(arg scan_frame)" />
    <param name="global_costmap/global_frame" value="$(arg map_frame)" />
    <param name="global_costmap/robot_base_frame" value="$(arg base_frame)" />

    <remap from="cmd_vel" to="$(arg cmd_vel_topic)"/>
    <remap from="odom" to="$(arg odom_topic)"/>
    <remap from="map" to="/map" />

    <!-- <param name="DWAPlannerROS/min_vel_x" value="0.0" if="$(arg move_forward_only)" /> -->
  </node>
</launch>
